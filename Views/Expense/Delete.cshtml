@model InAndOut.Models.Expense
@{
    ViewData["Title"] = "Delete The Expanse";
}


<form method="post" asp-action="DeletePost">
    <input hidden asp-for="Id"/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input class="form-control" disabled asp-for="ExpenseName" />
                    </div>
                    <div class="col-6">
                        <input class="form-control" disabled asp-for="Amount" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row offset-2">
                        <div class="col">
                            <input class="w-75 btn btn-danger" type="submit" name="submit" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success text-white w-75" asp-controller="Expense" asp-action="Index">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


