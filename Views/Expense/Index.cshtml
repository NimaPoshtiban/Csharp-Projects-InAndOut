@model IEnumerable<InAndOut.Models.Expense>
@{
    ViewData["Title"] = "My Expenses";
}


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Expense">Add New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Expense name</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="35%">@item.ExpenseName</td>
                        <td width="35%">$@item.Amount</td>
                        <td width="30%">
                            <div class="col-6 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-route-Id="@item.Id" asp-action="Update" asp-controller="Expense">Update</a>
                                <a class="btn btn-danger mx-1"  asp-route-Id="@item.Id" asp-action="Delete" asp-controller="Expense">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td class="bg-info text-white font-weight-bold" width="30%">Total Expenses:</td>
                    <td class="bg-info text-center text-white font-weight-bolder" width="70%">$@Model.Sum(s => s.Amount)</td>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <h3 class="text-info">No Items Created yet...</h3>
    }

</div>

