@model InAndOut.Models.ExpenseType
@{
    ViewData["Title"] = "Delete The  Type";
}


<form method="post" asp-action="DeletePost">
    <input hidden asp-for="Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense Type</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="Name"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <input class="form-control" disabled asp-for="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row offset-2">
                        <div class="col">
                            <input class="w-75 btn btn-danger" type="submit" name="submit" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success text-white w-75" asp-controller="ExpenseType" asp-action="Index">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


