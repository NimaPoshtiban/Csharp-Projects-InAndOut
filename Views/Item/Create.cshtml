@model InAndOut.Models.Item
@{
    ViewData["Title"] = "Add new Item";
}

<form method="post" asp-action="Create">
    <div class="form-group row">
        <h2 class="text-black-50 pl-3">Add Item</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ItemName"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Borrower"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Lender"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <input class="form-control" asp-for="ItemName"/>
                </div>
                <div class="col-4">
                    <input class="form-control" asp-for="Borrower"/>
                </div>
                <div class="col-4">
                    <input class="form-control" asp-for="Lender"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 text-center row offset-2">
                    <div class="col">
                        <input class="w-75 btn btn-primary" type="submit" name="submit"  value="Create" />
                    </div>
                    <div class="col">
                        <a class="btn btn-danger text-white w-75" asp-controller="Item" asp-action="Index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

